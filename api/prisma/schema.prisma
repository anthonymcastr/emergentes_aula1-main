generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Animal {
  id        Int        @id @default(autoincrement())
  nome      String
  idade     Int
  raca      String
  urlImagem String
  tipo      TipoAnimal
  cidade    tipoCidade
  usuarioId Int
  usuario   Cliente    @relation(fields: [usuarioId], references: [id]) // RELAÇÃO PADRÃO
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  contatos  Contato[]
}



model Cliente {
  id        Int       @id @default(autoincrement())
  nome      String
  email     String    @unique
  telefone  String
  senha     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  role      String    @default("user")
  contatos  Contato[]
  animais   Animal[]  // NÃO precisa do @relation com nome aqui
}



model Contato {
  id        Int      @id @default(autoincrement())
  mensagem  String
  criadoEm  DateTime @default(now())
  clienteId Int
  animalId  Int?
  animal    Animal?   @relation(fields: [animalId], references: [id], onDelete: SetNull)
  cliente   Cliente  @relation(fields: [clienteId], references: [id])
}

model Admin {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senha     String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum TipoAnimal {
  ADOCAO
  PERDIDO
  ENCONTRADO
}

enum tipoCidade {
  PELOTAS
}
