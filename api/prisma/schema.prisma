generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}

model Animal {
  id         Int     @id @default(autoincrement())
  nome       String
  idade      Int
  raca       String
  urlImagem  String
  tipo       TipoAnimal
  cidade     tipoCidade
  usuarioId  Int
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  contatos   Contato[]

}


model Cliente {
  id        Int     @id @default(autoincrement())
  nome      String
  email     String  @unique
  telefone  String
  senha     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  contatos   Contato[]

}

model Contato {
  id        Int      @id @default(autoincrement())
  mensagem  String
  criadoEm  DateTime @default(now())

  clienteId Int
  animalId  Int

  cliente   Cliente  @relation(fields: [clienteId], references: [id])
  animal    Animal   @relation(fields: [animalId], references: [id])
}


enum TipoAnimal {
  ADOCAO
  PERDIDO
  ENCONTRADO
}

enum tipoCidade {
  PELOTAS
}
