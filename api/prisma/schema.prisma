generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}

model Animal {
  id         Int     @id @default(autoincrement())
  nome       String
  idade      Int
  raca       String
  urlImagem  String
  tipo       TipoAnimal
  cidade     tipoCidade
  usuarioId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Cliente {
  id        Int     @id @default(autoincrement())
  nome      String
  email     String  @unique
  telefone  String
  senha     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



enum TipoAnimal {
  ADOCAO
  PERDIDO
  ENCONTRADO
}

enum tipoCidade {
  PELOTAS
}
